@{
    @using Dominio
    @model List<Proveedor>

    <h1 class="mt-4 mb-3">Proveedores</h1>    

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="ps-3">Id</th>                                        
                    <th scope="col">Nombre</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Descuento</th>
                    <th scope="col">Promocion</th>                    
                </tr>
            </thead>
            <tbody>
                
                    @foreach (Proveedor p in Model)
                    {
                        <tr>
                            <th>@p.NumeroProveedor</th>
                            <td>@p.Nombre</td>
                            <td>@p.Telefono</td>
                            <td>@p.Direccion</td>
                            <td>@p.Descuento %</td>
                            <td>@Html.ActionLink("Modificar", "IndexEstablecerPromocion", "Proveedor", new {NumeroProveedor = p.NumeroProveedor})</td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
    
    @if(TempData["MensajeExitoso"] != null)
    {
        <div class="alert alert-success alertaExito" role="alert">
            <span>✔️ </span> @TempData["MensajeExitoso"]
        </div>
    }
}
